  font-size: 0.8em;
  transition: 0.2s;
  font-family: Arial, Helvetica, sans-serif;

  /* make the list items unselectable */
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

/* Set all odd list items to a different color (zebra-stripes) */
ol li:nth-child(odd) {
  background: #87CEEB;
}

